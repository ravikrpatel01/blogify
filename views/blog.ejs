<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog Content</title>
    <style>
        .container {
            max-width: 1400px;
            margin: auto;
        }

        h1 {
            font-family: 'Arial', sans-serif;
            font-weight: bold;
            color: #333;
        }

        pre {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            font-size: 1.1rem;
            line-height: 1.6;
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        img {
            border-radius: 8px;
        }

        button.btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        button.btn-primary:hover {
            background-color: #0056b3;
        }
        .img-container{
            width: 100%;
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background-color: white;
            border-radius: 4px;
        }
    </style>
</head>
<body style="background-color: #f4f4f4;">
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <div class="img-container">
            <img src="<%= blog.coverImageURL %>" alt='<%= blog.title %>' width="95%" height="100%">
        </div>
        <pre style="white-space: pre-wrap; word-wrap: break-word; margin-top: 20px;"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50px" height="50px">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h3>Comments (<%= comments.length %>)</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment">
                </div>
                <button class="btn btn-primary" type="submit">Add</button>
            </form>  
                  
        <% } %>   
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageUrl %>"alt="<%= %>" width="50px">
                    <%= comment.createdBy.fullName %>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
        </div>         
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>